
<section>
<div class="hdbs">
  {{#each blog}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/blog/{{id}}">{{title}}</a>
      </h2>
      <div>
        Blogged by {{User.name}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </article>
  {{/each}}
</div>
</section>