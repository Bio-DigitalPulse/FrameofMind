<div class='hdbs' id='singleblog'>
  <article class='card'>
    <div class='card-header flex-row justify-space-between'>
      <h2>{{blogs.title}}</h2>
      <div>
        blogsed by
        {{blogs.User.username}}
        on
        {{format_date blogs.createdAt}}
      </div>
    </div>
    <div class='card-body'>
      {{blogs.body}}
    </div>
  </article>

  {{#if blogs.Comments}}
    <section class='hdbs'>
      <div class='card-header'>
        <h3>Comments</h3>
      </div>

      <div class='card-body'>
        {{#each blogs.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash;
              {{User.name}},
              {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id='new-comment-form' class='hdbs'>
    <div class='card-header'>
      <h3>Add New Comment</h3>
    </div>

    <div class='card-body'>
      <input type='hidden' name='blogs-id' value='{{blogs.id}}' />

      <label class='form-label' for='comment-body'>Comment</label>

      <textarea name='comment-body' class='form-input'></textarea>

      <button type='submit' class='btn'>Submit</button>
    </div>
  </form>
</div>

<script src='./js/comment.js'></script>